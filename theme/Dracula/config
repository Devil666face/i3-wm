mode "üì°" {
    # wg vpn
    bindsym c exec --no-startup-id wg-quick up $wgname && \
        echo $wgname > /tmp/vpn && \
        notify-send --icon=gtk-network "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ $wgname —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ"; mode "default"
    bindsym d exec --no-startup-id wg-quick down $wgname && \
        rm /tmp/vpn && \
        notify-send --icon=gtk-network "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —Å $wgname —Ä–∞–∑–æ—Ä–≤–∞–Ω–æ"; mode "default"
    # openconnect vpn
    bindsym Shift+c exec --no-startup-id notify-send --icon=gtk-network "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ Openconnect —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ" && \
        echo Openconnect > /tmp/vpn && \
        echo "$OPENCONNECT_PASSWORD" | sudo openconnect -d $OPENCONNECT_HOST --user $OPENCONNECT_USER --passwd-on-stdin; mode "default"
    bindsym Shift+d exec --no-startup-id notify-send --icon=gtk-network "VPN" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —Å Openconnect —Ä–∞–∑–æ—Ä–≤–∞–Ω–æ" && \
        rm /tmp/vpn && \
        sudo pkill openconnect; mode "default"
    # docker rdp windows

    bindsym r exec --no-startup-id notify-send --icon=remmina "RDP" "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ windows" && \
        xfreerdp /u:Docker /dynamic-resolution /v:172.17.0.2 /p:602488; mode "default"
        
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+n mode "default"
}
